<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateToken</servlet-name>
        <servlet-class>validate.validateToken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>register.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirm</servlet-name>
        <servlet-class>confirm.confirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirmPurchase</servlet-name>
        <servlet-class>confirm.confirmPurchase</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertConfirmPurchase</servlet-name>
        <servlet-class>confirm.insertConfirmPurchase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateToken</servlet-name>
        <url-pattern>/validateToken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirmPurchase</servlet-name>
        <url-pattern>/confirmPurchase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertConfirmPurchase</servlet-name>
        <url-pattern>/insertConfirmPurchase</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
